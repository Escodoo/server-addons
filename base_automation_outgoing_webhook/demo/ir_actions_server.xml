<odoo noupdate="1">

    <record model="base.automation" id="demo_outgoing_webhook_on_create" >
        <field name="name">Outgoing Webhook: sample outgoing webhook</field>
        <field name="state">code</field>
        <field name="code">
INVOKE_URL="https://WEBHOOK-URL"
data = {
  "partner_id": record.id,
  "partner_name": record.name,
}
log("Sending to webhook: %s" % data)
make_request # for real case use: make_request("POST", INVOKE_URL, data=data)
        </field>
        <field name="trigger">on_create</field>
        <field name="model_id" ref="base.model_res_partner" />
    </record>

</odoo>
